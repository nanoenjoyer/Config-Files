	"Theme - JavaScript": {
		"scope": "javascript",
		"prefix": "jstheme",
		"body": [
			"const savedTheme = localStorage.getItem('theme')",
			"const html = document.documentElement",
			"const toggleBtn = document.getElementById('themeToggle')",
			"",
			"setTheme()",
			"",
			"if (savedTheme) {",
			"\thtml.setAttribute('data-theme', savedTheme)",
			"\ttoggleBtn.src = savedTheme == 'dark' ? 'images/icons/sun.png' : 'images/icons/moon.png'",
			"}",
			"",
			"if (!savedTheme) {",
			"\tconst prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches",
			"\thtml.setAttribute('data-theme', prefersDark ? 'dark' : 'light')",
			"\ttoggleBtn.src = prefersDark ? 'images/icons/sun.png' : 'images/icons/moon.png'",
			"}",
			"",
			"function setTheme() {",
			"",
			"\ttoggleBtn.addEventListener('click', () => {",
			"\t\tconst currentTheme = document.documentElement.getAttribute('data-theme')",
			"",
			"\t\tif (currentTheme == 'dark') {",
			"\t\t\thtml.setAttribute('data-theme', 'light')",
            "\t\t\ttoggleBtn.src = 'images/icons/moon.png'",
            "\t\t\tlocalStorage.setItem('theme', 'light')",
			"\t\t} else {",
			"\t\t\thtml.setAttribute('data-theme', 'dark')",
			"\t\t\ttoggleBtn.src = 'images/icons/sun.png'",
			"\t\t\tlocalStorage.setItem('theme', 'dark')",
			"\t\t}",
			"\t})",
			"}"
		],
		"description": "snippet for setting theme on websites (JS part)"
	},

